<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/smoke_chimney_industrial_29465"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#6bffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/logo_first_page" />

        <TextView
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/fild_redise_blue"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:ems="10"
            android:hint="البريد الالكترونى"
            android:padding="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"

            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise_blue"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:hint="تاكيد كلمه المرور"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp" />

        <LinearLayout
            android:layoutDirection="rtl"
            android:id="@+id/editText3"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">




            <CheckBox
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="start"
                android:text="كمؤسسه"
                android:id="@+id/moasa"
                android:layout_width="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:layout_weight=".7" />
            <CheckBox
                android:textColor="@color/colorPrimaryDark"
                android:text="كفرد"
                android:layout_weight=".2"
                android:id="@+id/singelCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn"
            android:text="الدخول"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <com.example.shaymaa.finalproject.MyTextView

            android:id="@+id/forgetpassword"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="هل نسيت  كلمه المرور"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAlignment="center" />


        <LinearLayout
            android:gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp">



            <com.example.shaymaa.finalproject.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                 android:text="إذاكنت مستخدم جديد"
                android:textAlignment="center"
                 android:textSize="16sp" />
            <com.example.shaymaa.finalproject.MyTextView
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_margin="@dimen/_2sdp"
                android:id="@+id/acount_new"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="أنشئ حساب"
                android:textColor="@color/colorPrimaryDark"

                android:textAlignment="center"
                 android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>