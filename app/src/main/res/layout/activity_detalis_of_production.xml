<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_copy"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shaymaa.finalproject.activites.DetalisOfProduction_WitRemove">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" >

        <ImageView
            android:id="@+id/go_back"
            android:layout_gravity="end"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_4sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/go_back"
            android:contentDescription="@string/bake_icon" />

        <com.example.shaymaa.finalproject.others.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text= "إزاله من المفضله"
            android:layout_gravity="start"
            android:gravity="center"
            android:id="@+id/remove_from_my_fav"
            />
        <com.example.shaymaa.finalproject.others.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text= "وصف المنتج"
             android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/titel"
            />

    </android.support.v7.widget.Toolbar>

    <ImageView

        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/fild_redise_white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:id="@+id/product_image_name" />


    <LinearLayout
        android:background="@drawable/fild_redise_white"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:id="@+id/Tabcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "السعر  : "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="  قسم اللإعلان  :"
                    android:id="@+id/product_price"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "الخصم : "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="   نوع اللإعلان  :"
                    android:id="@+id/product_discount"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "تاريخ الخصم : "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="    تصنيف اللإعلان  :"
                    android:id="@+id/product_discount_date"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "الشحن : "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="السعر  :"
                    android:id="@+id/product_freight"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "الخدمة: "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="     المدينة  :"
                    android:id="@+id/product_service"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "الطريقة : "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="      تاريخ الإعلان   :"
                    android:id="@+id/product_method"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:text= "الوصف: "
                    android:layout_weight="1"


                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <com.example.shaymaa.finalproject.others.MyTextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:hint="       رقم الإعلان   :"
                    android:id="@+id/product_content"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>






    </LinearLayout>



</LinearLayout>
