<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_add_factory"
    tools:context="com.example.shaymaa.finalproject.activites.AddProducts">



    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_add_factory"
        >


        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:padding="@dimen/_5sdp"
            android:text="أضف منتج"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/factory"
            android:contentDescription="@string/add_your_factory"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_200sdp"
            android:padding="@dimen/_10sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/image"

            />




        <EditText
            android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/manwhite"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
             android:layout_width="@dimen/_240sdp"
             android:layout_height="@dimen/_30sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:inputType="text"
            android:hint="إسم المنتج"
            android:ems="10"
            android:id="@+id/title"

            />

        <EditText
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_30sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
             android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/factory_icon"
            android:hint="السعر"
            android:drawablePadding="@dimen/_15sdp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/price" />

        <EditText
            android:hint="الخصم"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_30sdp"
             android:paddingEnd="@dimen/_15sdp"
            android:paddingStart="@dimen/_15sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/ic_phone_android_white"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/discount" />

        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/manwhite"
             android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
             android:layout_height="@dimen/_30sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:inputType="text"
            android:hint="الخدمة"
            android:ems="10"
            android:id="@+id/service"

            />
        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"

            android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/manwhite"
             android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
             android:layout_height="@dimen/_30sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:inputType="text"
            android:hint="الشحن"
            android:ems="10"
            android:id="@+id/freight"

            />
        <EditText
            android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/manwhite"
             android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/_240sdp"
             android:layout_height="@dimen/_30sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:inputType="text"
            android:hint="الطريقه"
            android:ems="10"
            android:id="@+id/method"

            />
        <EditText
            android:background="@drawable/fild_redise_white"
            android:drawableRight="@drawable/manwhite"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:inputType="text"
            android:hint="محتوي المنتج"
            android:ems="10"
            android:id="@+id/content"

            />



        <Button
            android:textColor="#ffffff"
            android:background="@drawable/login_btn"
            android:layout_gravity="center"
            android:text="أضف"
            android:textSize="20sp"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/cuttongadding" />


    </LinearLayout>
</FrameLayout>
